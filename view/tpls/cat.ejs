<!DOCTYPE html>
<html lang="zh-CN">
    <head>
        <% include common/meta %>
    </head>
    <body>
        
        <% include common/header %>
        
        <% include common/banner %>
        

        <div class="container mt20">
          <div class="row">
            <div class="col-xs-3">
              <% include common/left %>
            </div>
            <div class="col-xs-9">
                <div class="detail-box">
                  <% include common/bar %>
                  
                  <div class="cat-body">
 
                        <%
                        for(var i=0;i<product.length;i++){
                        %>
                        <div class="col-xs-6 col-sm-6 col-lg-4">
                            <div class="thumbnail">
                              <div class="thum-img">
                                  <%
                                    if(product[i].themeimg){
                                  %>
                                  <img alt="..." src="<%= product[i].themeimg %>" class="img-responsive">
                                  <%
                                      }else{
                                  %>
                                  <img alt="..." src="view/tpls/images/news.jpg" class="img-responsive">
                                  <%
                                      }
                                  %>
                                  
                              </div>
                              <div class="caption">
                                <h3><%= product[i].title %></h3>
                                <p><%= product[i].describe %></p>
                                <p class="mt5"><a href="/detail?id=<%= product[i].id %>">查看更多 <span class="go">+</span></a></p>
                              </div>
                            </div>
                        </div>
                        <%
                        }
                        %>
                        
                  </div> 
                </div>
            </div>
          </div>
        </div>

        <% include common/footer %>

    </body>
</html>