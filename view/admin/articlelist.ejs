<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>后台管理系统 1.3</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le styles -->



    <link rel="stylesheet" href="view/admin/assets/css/style.css">
    <link rel="stylesheet" href="view/admin/assets/css/loader-style.css">
    <link rel="stylesheet" href="view/admin/assets/css/bootstrap.css">

    <link rel="stylesheet" type="text/css" href="view/admin/assets/js/progress-bar/number-pb.css">
    

    <style type="text/css">
    canvas#canvas4 {
        position: relative;
        top: 20px;
    }
    </style>




    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    <!-- Fav and touch icons -->
    <link rel="shortcut icon" href="view/admin/assets/ico/minus.png">
</head>

<body> 
    <!-- Preloader -->
    <div id="preloader">
        <div id="status">&nbsp;</div>
    </div>
    <!-- TOP NAVBAR -->
    <% include common/header %>

    <!-- /END OF TOP NAVBAR -->
    
    <!-- SIDE MENU -->
    <% include common/left %>
    <!-- END OF SIDE MENU -->


    <!--  PAPER WRAP -->
    <div class="wrap-fluid">
        <div class="container-fluid paper-wrap bevel tlbr">

            <!-- CONTENT -->
            <!--TITLE -->
            <% include common/nav %>
            <!--/ TITLE -->

            <!-- BREADCRUMB -->
            <% include common/breadcrumb %>
            <!-- END OF BREADCRUMB -->

            <div class="content-wrap">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="nest" id="horizontalClose">

                            <div class="title-alt">
                                <h6>
                                    文章列表</h6>
                                <div class="titleToggle">
                                    <a href="/adminArticle" class="btn btn-primary btn-lg" >添加文档</a>
                                    <button class="btn btn-primary btn-lg" >我的文档</button>
                                    <button class="btn btn-primary btn-lg" >所有文档</button>
                                    <button class="btn btn-primary btn-lg" >栏目文档</button>
                                    <button class="btn btn-primary btn-lg" >更新列表</button>
                                </div>
                            </div>

                            <div class="body-nest" id="horizontal">
                                <table class="table table-striped table-bordered table-hover" id="table-userlist">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>选择</th>
                                            <th>文章标题</th>
                                            <th>更新时间</th>
                                            <th>类目</th>
                                            <th>点击</th>
                                            <th>权重</th>
                                            <th>发布人</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%
                                        for(var i=0;i<data.length;i++){
                                        %>
                                        <tr>
                                            <td><%= data[i].id %></td>
                                            <td><input type="checkbox" value="<%= data[i].id %>" /></td>
                                            <td><%= data[i].title %></td>
                                            <td><%= data[i].date %></td>
                                            <td><%= data[i].type %></td>
                                            <td><%= data[i].click %></td>
                                            <td><%= data[i].weight %></td>
                                            <td><%= data[i].writer %></td>
                                            <td>
                                                <button class="btn btn-success">编辑属性</button>
                                                <a class="btn btn-success" href="/adminArticle">编辑</a>
                                                <button class="btn btn-success">预览</button>
                                            </td>  
                                        </tr>
                                        <%
                                        }
                                        %>
                                        
                                
                                    </tbody>
                                </table>

                                <div class="article-btn-group">
                                    <button class="btn btn-success" id="article_all">全选</button>
                                    <button class="btn btn-success" id="article_cancle">取消</button>
                                    <button class="btn btn-warning" id="cancle">删除</button>
                                </div>
                                
                                <nav class="txtright">
                                  <ul class="pagination">
                                    <li id="page-first"><a href="javascript:void(0);" data-page="0">首页</a></li>
                                    <%
                                        for(var i=0;i<pages;i++){
                                            if(i==0){
                                    %>
                                    <li class="active listpage"><a href="javascript:void(0);"  data-page="<%= i %>"><%= i+1 %></a></li>
                                    <%
                                                }else{
                                    %>
                                    <li class="listpage"><a href="javascript:void(0);" data-page="<%= i %>"><%= i+1 %></a></li>
                                    <%
                                                }   
                                        }
                                    %>
                                    <li id="page-last"><a href="javascript:void(0);" data-page="<%= pages-1 %>">尾页</a></li>
                                  </ul>
                                </nav>

                            </div>

                        </div>
                    </div>
                </div>
            </div>

           
        </div>
    </div>
    <!--  END OF PAPER WRAP -->

   <!-- RIGHT SLIDER CONTENT -->
    <% include common/slidebar %>
    <!-- END OF RIGHT SLIDER CONTENT-->

    <!-- cononjs -->
    <% include common/commonjs %>
    <!-- END OF cononjs-->
    
    <script>
        $(function(){
            //初始化
            var page = $('.pagination li.active').find('a').data('page');
            if(page == $('#page-first a').data('page')){
                $('#page-first').addClass('disabled');
            }else{
                $('#page-first').removeClass('disabled');
            }

            if(page == $('#page-last a').data('page')){
                $('#page-last').addClass('disabled');
            }else{
                $('#page-last').removeClass('disabled');
            }

            //分页
            $('#page-first').click(function(event) {
                if($(this).hasClass('disabled')) 
                    return ;
                $('.pagination .listpage').first().click();
            });

            $('#page-last').click(function(event) {
                if($(this).hasClass('disabled')) 
                    return ;
                $('.pagination .listpage').last().click();
            });

            $('.pagination').delegate('.listpage', 'click', function(event) {
                var self = this;
                if($(this).hasClass('active'))
                    return;
                page = $(this).find('a').data('page');

                $.ajax({
                    url: '/adminArticleListPage',
                    type: 'post',
                    data: {page : page},
                })
                .done(function(data) {
                    var tbody = '';
                    if(data.status == 1){
                        $('#mes .modal-body').html(data.data);
                        $('#mes').modal({
                            keyboard : true
                        });
                        setTimeout(function(){
                        $('#mes').modal('hide');
                      },1000);
                    }else{
                        $('.pagination li').removeClass('active');
                        $(self).addClass('active');
                        if(page == $('#page-first a').data('page')){
                            $('#page-first').addClass('disabled');
                        }else{
                            $('#page-first').removeClass('disabled');
                        }

                        if(page == $('#page-last a').data('page')){
                            $('#page-last').addClass('disabled');
                        }else{
                            $('#page-last').removeClass('disabled');
                        }

                        for(var i=0;i<data.data.length;i++){
                            tbody += '<tr>'
                                  + '<td>' + data.data[i].id +'</td>'
                                  + '<td><input type="checkbox" value="' + data.data[i].id + '" /></td>'
                                  + '<td>' + data.data[i].title +'</td>'
                                  + '<td>' + data.data[i].date +'</td>'
                                  + '<td>' + data.data[i].type +'</td>'
                                  + '<td>' + data.data[i].click +'</td>'
                                  + '<td>' + data.data[i].weight +'</td>'
                                  + '<td>' + data.data[i].writer +'</td>'
                                  + '<td>'
                                  +     '<button  class="btn btn-success" data-articleId="' + data.data[i].id + '">编辑属性</button>  '
                                  +     '<a class="btn btn-success" href="/adminArticle">编辑</a>'
                                  +     '<button  class="btn btn-warning user-handle" data-userId="' + data.data[i].id + '"  >预览</button></td>'
                                  + '</tr>'
                        }
                        $('#table-userlist tbody').html(tbody);

                    }
                    
                })
                
                
            });
            
            //全选
            $('#article_all').click(function(event) {
                $('#table-userlist tbody input').each(function(index, val) {
                    $(this).get(0).checked = true;
                });
            }); 

            //取消
            $('#article_cancle').click(function(event) {
                $('#table-userlist tbody input').each(function(index, val) {
                    $(this).get(0).checked = false;
                });
            }); 


        })
    </script>

</body>

</html>
