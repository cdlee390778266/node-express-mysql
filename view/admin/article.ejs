<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>后台管理系统 1.3</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le styles -->



    <link rel="stylesheet" href="view/admin/assets/css/style.css">
    <link rel="stylesheet" href="view/admin/assets/css/loader-style.css">
    <link rel="stylesheet" href="view/admin/assets/css/bootstrap.css">

    <link rel="stylesheet" type="text/css" href="view/admin/assets/js/progress-bar/number-pb.css">
    <link rel="stylesheet" type="text/css" href="frameworks/wysiwyg-editor/css/wysiwyg-editor.css">
    <link rel="stylesheet" type="text/css" href="view/admin/js/datetimepicker/datetimepicker.css">
    

    <style type="text/css">
    canvas#canvas4 {
        position: relative;
        top: 20px;
    }
    </style>




    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    <!-- Fav and touch icons -->
    <link rel="shortcut icon" href="view/admin/assets/ico/minus.png">
</head>

<body> 
    <!-- Preloader -->
    <div id="preloader">
        <div id="status">&nbsp;</div>
    </div>
    <!-- TOP NAVBAR -->
    <% include common/header %>

    <!-- /END OF TOP NAVBAR -->
    
    <!-- SIDE MENU -->
    <% include common/left %>
    <!-- END OF SIDE MENU -->


    <!--  PAPER WRAP -->
    <div class="wrap-fluid">
        <div class="container-fluid paper-wrap bevel tlbr">

            <!-- CONTENT -->
            <!--TITLE -->
            <% include common/nav %>
            <!--/ TITLE -->

            <!-- BREADCRUMB -->
            <% include common/breadcrumb %>
            <!-- END OF BREADCRUMB -->
        
            <div class="content-wrap">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="nest" id="horizontalClose">
                            <div class="title-alt">
                                <h6>
                                <%
                                if(data[0].id){
                                %>
                                修改文章
                                <%
                                }else{
                                %>
                                发布文章
                                <%
                                }
                                %>
                                    </h6>
                                <div class="titleClose">
                                    <a class="gone" href="#horizontalClose">
                                        <span class="entypo-cancel"></span>
                                    </a>
                                </div>
                                <div class="titleToggle">
                                    <a class="nav-toggle-alt" href="#horizontal">
                                        <span class="entypo-up-open"></span>
                                    </a>
                                </div>

                            </div>

                            <div class="body-nest" id="horizontal">
                                
                                    <form class="form-horizontal article" id="article"  method="post" action="/adminSaveArticle" enctype="multipart/form-data" >

                                        <input type="hidden" name="art_id" value="<%= data[0].id %>" />
                                       
                                        <div class="form-group">
                                            <div class="col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon">文章标题：</span>
                                                    <input type="text" class="form-control" id="art_title" name="art_title" value="<%= data[0].title %>">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon">自定义属性：</span>
                                                    <input type="text" class="form-control" id="art_diy" name="art_diy" value="<%= data[0].diy %>" >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon">TAG标签：</span>
                                                    <input type="text" class="form-control" id="art_tag" name="art_tag" value="<%= data[0].tag %>">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon">权重：</span>
                                                    <input type="text" class="form-control" id="art_weight" name="art_weight" value="<%= data[0].weight %>">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon">作者：</span>
                                                    <input type="text" class="form-control" id="art_writer" name="art_writer" value="<%= data[0].writer %>" >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon">文章主栏目：</span>
                                                    <select name="art_type" id="art_type" class="form-control" value="<%= data[0].type %>" >
                                                        <option value="0">0</option>
                                                        <option value="1">1</option>
                                                        <option value="2">2</option>
                                                        <option value="3">3</option>
                                                        <option value="4">4</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon">关键字：</span>
                                                    <input id="art_keywords" name="art_keywords" class="form-control" type="text" value="<%= data[0].keywords %>" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-xs-12 control-label txtleft" for="sart_description">文章摘要：</label>
                                            <div class="col-xs-12">
                                                <textarea name="art_description" id="art_description" class="form-control" ><%= data[0].description %></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-12">
                                                <h6>文章内容：</h6>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-12">
                                                <textarea name="content" id="content" ><%= data[0].content %></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-12" >
                                            附加选项：
                                            <%
                                            if(data[0].needwatermark){
                                            %>
                                            <input type="checkbox" id="art_needwatermark" name="art_needwatermark" value="1" checked="checked" />
                                            <%
                                                }else{
                                            %>
                                            <input type="checkbox" id="art_needwatermark" name="art_needwatermark" value="1" />
                                            <%
                                                }
                                            %>
                                             图片是否加水印 </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-12" for="art_description">评论选项：
                                            <%
                                            if(!data[0].notpost){
                                            %>
                                            <input type="radio"  name="notpost" value="0" checked="" /> 允许评论
                                            <input type="radio"  name="notpost" value="1" /> 禁止评论 
                                            <%
                                            }else{
                                            %>
                                            <input type="radio"  name="notpost" value="0"  /> 允许评论
                                            <input type="radio"  name="notpost" value="1" checked="" /> 禁止评论 
                                            <%
                                            }
                                            %>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon">浏览次数：</span>
                                                    <input type="text" class="form-control" id="art_click" name="art_click" value="<%= data[0].click %>">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon">发布时间：</span>
                                                    <input type="text" class="form-control" id="art_date" name="art_date" readonly value="<%= data[0].date %>">
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="form-group article-btn-group">
                                            <div class="col-lg-offset-2 col-lg-10">
                                                <input value="保存" class="btn btn-info" type="submit">
                                                <input class="btn btn-warning" value="重置" type="reset">
                                            </div>
                                        </div>
                                    </form>
                                 
                            </div>

                        </div>
                    </div>
                </div>
            </div>

           
        </div>
    </div>
    <!--  END OF PAPER WRAP -->

    <!-- RIGHT SLIDER CONTENT -->
    <% include common/slidebar %>
    <!-- END OF RIGHT SLIDER CONTENT-->

    <!-- cononjs -->
    <% include common/commonjs %>
    <!-- END OF cononjs-->

    <script src="frameworks/wysiwyg-editor/js/wysiwyg.js"></script>
    <script src="frameworks/wysiwyg-editor/js/wysiwyg-editor.js"></script>
    <script src="view/admin/js/datetimepicker/bootstrap-datetimepicker.min.js"></script>
    <script src="view/admin/js/datetimepicker/bootstrap-datetimepicker.zh-CN.js"></script>
    <script src="view/admin/js/article.js"></script>
</body>

</html>
